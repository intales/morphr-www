<nav class="fixed top-0 left-0 right-0 z-50 border-b border-zinc-800 bg-[#0F001F]/70 backdrop-blur-xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-3">
        <img src="/favicon-morphr.svg" alt="morphr logo" class="w-12 h-12 sm:w-16 sm:h-16" />
        <span class="text-xl font-semibold text-white">morphr</span>
      </div>
      
      <div class="hidden md:flex md:items-center md:gap-6">
        <a href="https://github.com/intales/morphr" class="text-gray-400 hover:text-white transition-colors text-sm">GitHub</a>
        <a href="https://x.com/morphrdev" class="text-gray-400 hover:text-white transition-colors text-sm">X</a>
        <a href="https://discord.gg/cVm7gsx54C" class="text-gray-400 hover:text-white transition-colors text-sm">Discord</a>
        <a href="https://www.linkedin.com/company/morphr-dev" class="text-gray-400 hover:text-white transition-colors text-sm">LinkedIn</a>
        <a href="https://docs.page/intales/morphr" class="px-4 py-2 rounded-lg bg-gradient-to-r from-amber-300 to-fuchsia-400 text-black font-medium hover:opacity-90 transition-opacity">Start for free</a>
      </div>
      
      <div class="md:hidden">
        <button id="menu-toggle" class="text-white p-2" aria-label="Toggle menu">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <div id="mobile-menu" class="hidden md:hidden border-t border-zinc-800 bg-black/80 backdrop-blur-xl">
    <div class="px-4 py-4 space-y-4">
      <a href="https://github.com/intales/morphr" class="block text-gray-400 hover:text-white transition-colors">GitHub</a>
      <a href="https://x.com/morphrdev" class="block text-gray-400 hover:text-white transition-colors">X</a>
      <a href="https://discord.gg/cVm7gsx54C" class="block text-gray-400 hover:text-white transition-colors">Discord</a>
      <a href="https://www.linkedin.com/company/morphr-dev" class="block text-gray-400 hover:text-white transition-colors">LinkedIn</a>
      <a href="https://docs.page/intales/morphr" class="block px-4 py-2 rounded-lg bg-gradient-to-r from-amber-300 to-fuchsia-400 text-black font-medium hover:opacity-90 transition-opacity text-center">Start for free</a>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>